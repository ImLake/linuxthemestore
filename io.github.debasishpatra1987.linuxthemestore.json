{
    "id" : "io.github.debasishpatra1987.linuxthemestore",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "linuxthemestore",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=~/.local/share/icons/:rw",
        "--filesystem=~/.local/share/themes/:rw"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "linuxthemestore=debug"
        }
    },
"modules": [
  {
    "name": "cargobuild",
    "buildsystem": "meson",
    "sources": [
    {
      "type": "dir",
      "path": "."
    },
      {
	"type": "dir",
	"path": "./vendor"
      },
	{
	"type": "file",
	"path": "./io.github.debasishpatra1987.linuxthemestore.metainfo.xml"
	},

        {
          "type": "file",
          "path": "screenshots/1.png"
        },
        {
          "type": "file",
          "path": "screenshots/2.png"
        },
        {
          "type": "file",
          "path": "screenshots/3.png"
        },
        {
          "type": "file",
          "path": "screenshots/4.png"
        },
        {
          "type": "file",
          "path": "screenshots/5.png"
        }
]
  }
]
}
