{
    "id" : "com.ScalpelSoftwares.LinuxThemesStore",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "master",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "linuxthemesstore",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "build-args" : [
            "--share=network"
        ],
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "linuxthemesstore=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "filesystem": [
    "~/.local/share/icons/",
    "~/.local/share/themes/"
    ],
    "modules": [
        {
        "name": "cargobuild",
        "buildsystem": "meson",
        "sources": [
            {
            "type": "dir",
            "path": ".."
            }
            ]
        },
        {
            "name" : "bincopy",
            "buildsystem": "simple",
            "build-commands": [
                "pwd",
                "cp linuxthemesstore /app/bin/linuxthemesstore",
                "chmod +x /app/bin/linuxthemesstore"
            ],
            "sources" : [
                {
                "type" : "file",
                "path" : "../target/release/linuxthemesstore"
                }
            ]
        }
    ]

}
