{
    "id" : "com.github.debasishpatra1987.linuxthemestore",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "linuxthemestore",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=~/.local/share/icons/:rw",
        "--filesystem=~/.local/share/themes/:rw"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "linuxthemestore=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
"modules": [
  {
    "name": "cargobuild",
    "buildsystem": "meson",
    "sources": [
    {
      "type": "dir",
      "path": "."
    },
      {
	"type": "dir",
	"path": "./vendor"
      }
    ]
  }
]
}
