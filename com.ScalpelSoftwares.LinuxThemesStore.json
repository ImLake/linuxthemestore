{
    "id" : "com.ScalpelSoftwares.LinuxThemesStore",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "48",
    "sdk" : "org.gnome.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.rust-stable"
    ],
    "command" : "linuxthemesstore",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland",
        "--filesystem=~/.local/share/icons/:rw",
        "--filesystem=~/.local/share/themes/:rw"
    ],
    "build-options" : {
        "append-path" : "/usr/lib/sdk/rust-stable/bin",
        "env" : {
            "RUSTFLAGS": "-C opt-level=3",
            "RUST_BACKTRACE" : "1",
            "RUST_LOG" : "linuxthemesstore=debug"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
  "sources": [
    {
      "type": "dir",
      "path": "linuxthemesstore"
    },
      {
	"type": "dir",
	"path": "linuxthemestore/vendor"
      },
      {
        "type": "file",
        "path": "linuxthemestore/.cargo/config.toml",
        "dest": ".cargo/config.toml"
      }
  ],
"modules": [
  {
    "name": "cargobuild",
    "buildsystem": "meson",
    "sources": [
      {
	"type": "dir",
	"path": "."
      }
    ]
  }
]
}
